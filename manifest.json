{
    "manifest_version": 2,
    "name": "NoImage",
    "version": "1.0",

    "description": "Replaces all images with whitespace.",
    "icons": {
        "48": "images/border-48.png"
    },

    "applications": {
        "gecko": {
            "id": "noimage@mozilla.org",
            "strict_min_version": "45.0"
        }
    },

    "background": {
        "scripts": ["background-noimage.js"]
    },

    "permissions": [
        "<all_urls>",
        "webRequest",
        "webRequestBlocking"
    ],

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content-noimage.js"],
            "css": ["noimage.css"]
        }
    ]
}
